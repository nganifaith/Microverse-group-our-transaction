<div>
  <div class="card mb-3 p-3 flex-row justify-content-between border-top-0" id="trn-total">
    <h5 class="text-muted m-0">Total Amount</h5>
    <p class="font-weight-bold m-0">$<%= number_with_precision(@transactions.sum(:amount), :precision => 2) %></p>
  </div>
<div>
<div class="container">
  <div class="row w-full">
    <div class="col-12 col-sm-8 col-lg-5">
      <h6 class="text-muted">All Transactions</h6> 
      <ul class="list-group">
        <% @transactions.each do |transaction| %>
          <li class="list-group-item row justify-content-between align-items-center">
            <div class="image-parent col-sm">
              <% transaction.groups.each do |group| %>
                <%= group %>
              <% end %>
              <%= group_image(transaction.group, @external) %>
            </div>
            <div class="col-sm">
              <%= transaction.name %><br>
            </div>
            <div class="col-sm">
              <%= transaction.description %><br>
            </div>
            <div class="col-sm">
              <%= transaction.amount%>
            </div>
          </li>
        <%end %>
      </ul>
    </div>
  </div>
</div> 
</div>
</div>

<%= link_to new_transaction_path, class: "link-btn btn
                  btn-success w-100 p-4 rounded-0" do %>
  <span class="p-3 border border-light">NEW TRANSACTION</span>
<% end %>